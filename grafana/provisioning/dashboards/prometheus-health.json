{
  "title": "Prometheus – Health",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "editable": true,
  "panels": [
    {
      "type": "stat",
      "title": "Targets UP (total)",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 6 },
      "targets": [{ "expr": "sum(up)", "refId": "A" }]
    },
    {
      "type": "piechart",
      "title": "UP por job",
      "gridPos": { "x": 6, "y": 0, "w": 10, "h": 6 },
      "targets": [{ "expr": "sum by (job) (up)", "refId": "A" }]
    },
    {
      "type": "stat",
      "title": "Scrapes fallidos (5m)",
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 6 },
      "targets": [
        { "expr": "increase(prometheus_target_sync_failed_total[5m])", "refId": "A" }
      ]
    },

    {
      "type": "timeseries",
      "title": "Duración de scrape (p95, por job)",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 8 },
      "options": { "legend": { "displayMode": "list" } },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(scrape_duration_seconds_bucket[5m])) by (le, job))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Muestras por scrape (por job)",
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum by (job) (scrape_samples_post_metric_relabeling)", "refId": "A" }
      ]
    },

    {
      "type": "timeseries",
      "title": "Errores de scrape (body size / sample limit / OOO / duplicates) [rate 5m]",
      "gridPos": { "x": 0, "y": 14, "w": 24, "h": 8 },
      "options": { "legend": { "displayMode": "list" } },
      "targets": [
        { "expr": "rate(prometheus_target_scrapes_exceeded_body_size_limit_total[5m])", "refId": "A" },
        { "expr": "rate(prometheus_target_scrapes_exceeded_sample_limit_total[5m])", "refId": "B" },
        { "expr": "rate(prometheus_target_scrapes_sample_out_of_order_total[5m])", "refId": "C" },
        { "expr": "rate(prometheus_target_scrapes_sample_duplicate_timestamp_total[5m])", "refId": "D" }
      ]
    },

    {
      "type": "timeseries",
      "title": "Consultas activas y máx. concurrentes",
      "gridPos": { "x": 0, "y": 22, "w": 12, "h": 8 },
      "targets": [
        { "expr": "prometheus_engine_queries", "refId": "A" },
        { "expr": "prometheus_engine_queries_concurrent_max", "refId": "B" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Duración media de consultas (rate 5m)",
      "gridPos": { "x": 12, "y": 22, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(prometheus_engine_query_duration_seconds_sum[5m]) / rate(prometheus_engine_query_duration_seconds_count[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },

    {
      "type": "timeseries",
      "title": "Series y chunks en memoria",
      "gridPos": { "x": 0, "y": 30, "w": 12, "h": 8 },
      "targets": [
        { "expr": "prometheus_tsdb_head_series", "refId": "A" },
        { "expr": "prometheus_tsdb_head_chunks", "refId": "B" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Tamaño WAL y storage",
      "gridPos": { "x": 12, "y": 30, "w": 12, "h": 8 },
      "targets": [
        { "expr": "prometheus_tsdb_wal_storage_size_bytes", "refId": "A" },
        { "expr": "prometheus_tsdb_storage_blocks_bytes", "refId": "B" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" } }
    },

    {
      "type": "timeseries",
      "title": "CPU y memoria Prometheus",
      "gridPos": { "x": 0, "y": 38, "w": 12, "h": 8 },
      "targets": [
        { "expr": "process_cpu_seconds_total", "refId": "A" },
        { "expr": "process_resident_memory_bytes", "refId": "B" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes", "custom": { "drawStyle": "line" } } }
    },
    {
      "type": "timeseries",
      "title": "Goroutines / Threads",
      "gridPos": { "x": 12, "y": 38, "w": 12, "h": 8 },
      "targets": [
        { "expr": "go_goroutines", "refId": "A" },
        { "expr": "go_threads", "refId": "B" }
      ]
    }
  ]
}
